<h1>New Post</h1>

<%= form_with(model: [@place, @entry], url: place_entries_path(@place), local: true) do |form| %>
  <!-- Include a CSRF token for security -->
  <%= form.hidden_field :place_id, value: params[:place_id] %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", id: "title_input" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_field :description, class: "form-control", id: "description_input" %>
  </div>

  <div class="mb-3">
    <%= form.label :occurred_on, class: "form-label" %>
    <%= form.date_field :occurred_on, class: "form-control", id: "occurred_on_input" %>
  </div>

  <div class="mb-3">
    <%= form.label :uploaded_file, class: "form-label" %>
    <%= form.file_field :uploaded_file, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
