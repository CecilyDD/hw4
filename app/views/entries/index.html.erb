<h1>Entries</h1>

<% @entries.each do |entry| %>
  <div class="entry">
    <h2><%= entry.title %></h2>
    <p><%= entry.description %></p>
    <% if entry.uploaded_file.attached? %>
      <img src="<%= url_for(entry.uploaded_file) %>" class="img-fluid">
    <% else %>
      No image attached.
    <% end %>
  </div>
<% end %>
