<!-- app/views/places/show.html.erb -->
<h1><%= @place.name %></h1>

<h2>My Posts</h2>
<% @place.entries.each do |entry| %>
  <div>
    <h3><%= entry.title %></h3>
    <h4><%= entry.occurred_on %></h4>
    <p><%= entry.description %></p>
  </div>
<% end %>

<% if current_user %>
  <p>
    <%= link_to "New Post", new_place_entry_path(@place) %>
  </p>
<% end %>

<p>
  <%= link_to "Back to All Places", places_path %>
</p>
